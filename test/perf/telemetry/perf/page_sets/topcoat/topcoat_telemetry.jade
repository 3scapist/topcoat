repeats = 200

_css = (css == 'default') ? ("release/css/topcoat-" + platform + "-" + theme + ".css") : css

doctype 5
html
    head
        meta(charset="utf-8")
        meta(name="format-detection", content="telephone=no")
        meta(name="viewport", content="user-scalable=no, initial-scale=1, maximum-scale=1, width=device-width, height=device-width, target-densitydpi=device-dpi")

        title #{name} test
        |<link rel="stylesheet" type="text/css" href="#{_css}">

    body
        -while (repeats > 0)
            -var repeats = repeats - 1
            p
                | !{componentHTML}
